  <div style="padding-top: 20px">
    <button type="button" class="btn" style="width: 100%" id="summary-button">Summary</button>
  </div>

  <div style="padding-top:20px; padding-bottom: 20px">
    <select class="custom-select" id="featureSelector">
      <option value="1" selected>Show failed features ({{failedFeatures.length}}) </option>
      <option value="2">Show all features ({{features.length}})</option>
    </select>
  </div>


   <div class="list-group list-group-flush" id="nav-failed-features">
      {{#each failedFeatures}}
        <a href="#" class="list-group-item" style="font-size:14px;color: black">
            <strong>Feature:</strong> <span id="selected-feature-title-{{this.selectorId}}">{{this.name}}</span>
             <small class="text-muted text-right" style="text-align:right">{{this.duration}}</small>
        </a>
        {{#elements}}
          {{#equals status "failed"}}
            <a href="#" class="list-group-item" id="scenario-link-{{this.selectorId}}" style="font-size:12px;color: black">
              <div style="padding-left: 10px">
                <strong>Scenario:</strong> {{this.name}}
              </div>   
            </a>
          {{/equals}}
        {{/elements}}
      {{/each}}
  </div>

  <div class="list-group list-group-flush" id="nav-all-features">
    {{#each features}}

        {{#equals status "passed"}}
           <a href="#" class="list-group-item" style="font-size:14px;color: black">
              <strong>Feature:</strong> <span id="selected-feature-title-{{this.selectorId}}">{{this.name}}</span>
              <small class="text-muted text-right" style="text-align:right">{{this.duration}}</small>
           </a> 
        {{/equals}}
        {{#equals status "failed"}}
          <a href="#" class="list-group-item" style="font-size:14px;color: black">
              <strong>Feature:</strong> <span id="selected-feature-title-{{this.selectorId}}">{{this.name}}</span>
          </a>
        {{/equals}}
    
        {{#elements}}
          <a href="#" class="list-group-item" id="scenario-link-{{this.selectorId}}" style="font-size:12px;color: black">
            {{#equals this.status "passed"}}
              <span class="badge badge-success">{{this.status}}</span>
            {{/equals}}
            {{#equals this.status "failed"}}
              <span class="badge badge-danger">{{this.status}}</span>
            {{/equals}}
            <strong>Scenario:</strong> {{this.name}}
          </a> 
        {{/elements}}
    {{/each}}
  </div>
